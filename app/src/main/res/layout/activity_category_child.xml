<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/srl"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f60"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:src="@drawable/back"
            android:layout_height="match_parent"/>
        <cn.moon.fulicenter.ui.view.CatFilterCategoryButton
            android:id="@+id/tvTitle"
            android:background="#0000"
            android:drawableRight="@drawable/arrow2_up"
            android:text="不一样的特性"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnOrderByPrice"
            android:background="#f90"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="价格"
            android:drawableRight="@drawable/arrow_order_down"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnOrderByTime"
            android:background="#f90"
            android:drawableRight="@drawable/arrow_order_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="上架时间"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_category_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>