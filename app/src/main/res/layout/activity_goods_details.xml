<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvGoodsEnglishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="英文价格"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tvCurrentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/tvGoodsEnglishName"
        android:gravity="right"
        android:text="￥256"
        android:textSize="30sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvGoodsChineseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGoodsEnglishName"
        android:text="中文价格"
        android:textSize="30sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvSalePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvCurrentPrice"
        android:gravity="right"
        android:paddingLeft="150sp"
        android:text="￥256"
        android:textSize="30sp"/>

</RelativeLayout>
